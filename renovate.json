{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "Asia/Tokyo",
  "schedule": ["after 10pm and before 5am everyday"],
  "automerge": true,
  "platformAutomerge": false,
  "assignees": ["@Allianaab2m"],
  "configMigration": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": "patch",
      "groupName": "dependencies(patch)"
    },
    {
      "matchManagers": ["npm"],
      "rangeStrategy": "pin"
    },
    {
      "groupName": "react monorepo",
      "matchPackageNames": [
        "@types/react",
        "@types/react-dom"
      ]
    }
  ]
}
