{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"include": ["./app/**/*.{js,jsx,ts,tsx}", "./server/**/*.{js,ts}"]
	},
	"organizeImports": {
		"enabled": true,
		"include": ["./app/**/*.{js,jsx,ts,tsx}", "./server/**/*.{js,ts}"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"include": ["./app/**/*.{js,jsx,ts,tsx}", "./server/**/*.{js,ts}"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
