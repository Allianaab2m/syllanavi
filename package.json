{
  "name": "syllanavi",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "deploy": "wrangler pages deploy ./build/client",
    "dev": "remix vite:dev",
    "check:format": "biome format",
    "check:lint": "biome lint",
    "format": "biome check --formatter-enabled=true --linter-enabled=false --organize-imports-enabled=true --write",
    "lint": "biome lint --write",
    "start": "wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "typegen": "wrangler types --experimental-include-runtime",
    "test": "vitest",
    "migrate:generate": "drizzle-kit generate",
    "migrate:apply:local": "wrangler d1 migrations apply syllanavi-v2-d1 --local",
    "migrate:apply": "wrangler d1 migrations apply syllanavi-v2-d1 --remote",
    "migrate:apply:dev": "wrangler d1 migrations apply syllanavi-v2-d1-dev --remote",
    "postinstall": "lefthook install"
  },
  "dependencies": {
    "@hono/zod-validator": "0.4.2",
    "@paralleldrive/cuid2": "2.2.2",
    "@remix-run/cloudflare": "2.15.1",
    "@remix-run/cloudflare-pages": "2.15.1",
    "@remix-run/react": "2.15.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "0.38.2",
    "hono": "4.6.14",
    "hono-remix-adapter": "0.5.4",
    "isbot": "5.1.18",
    "lucide-react": "^0.468.0",
    "neverthrow": "8.1.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/vitest-pool-workers": "0.5.40",
    "@cloudflare/workers-types": "4.20241218.0",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@hono/vite-dev-server": "0.17.0",
    "@remix-run/dev": "2.15.1",
    "@types/react": "19.0.2",
    "@types/react-dom": "19.0.2",
    "autoprefixer": "10.4.20",
    "drizzle-kit": "0.30.1",
    "lefthook": "1.10.0",
    "postcss": "8.4.49",
    "tailwindcss": "3.4.17",
    "typescript": "5.7.2",
    "vite": "6.0.4",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "2.1.8",
    "wrangler": "3.96.0"
  },
  "engines": {
    "node": "22.12.0"
  }
}