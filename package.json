{
  "name": "syllanavi",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "deploy": "wrangler pages deploy ./build/client",
    "dev": "remix vite:dev",
    "check:format": "biome format",
    "check:lint": "biome lint",
    "format": "biome check --formatter-enabled=true --linter-enabled=false --organize-imports-enabled=true --write",
    "lint": "biome lint --write",
    "start": "wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "typegen": "wrangler types --experimental-include-runtime",
    "test": "vitest",
    "migrate:generate": "drizzle-kit generate",
    "migrate:apply:local": "wrangler d1 migrations apply syllanavi-v2-d1 --local",
    "migrate:apply": "wrangler d1 migrations apply syllanavi-v2-d1",
    "postinstall": "lefthook install"
  },
  "dependencies": {
    "@hono/zod-validator": "0.4.1",
    "@remix-run/cloudflare": "2.15.1",
    "@remix-run/cloudflare-pages": "2.15.1",
    "@remix-run/react": "2.15.1",
    "drizzle-orm": "0.38.0",
    "hono": "4.6.13",
    "hono-remix-adapter": "0.5.4",
    "isbot": "5.1.17",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/vitest-pool-workers": "0.5.36",
    "@cloudflare/workers-types": "4.20241205.0",
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-conventional": "19.6.0",
    "@hono/vite-dev-server": "0.17.0",
    "@remix-run/dev": "2.15.1",
    "@types/react": "18.3.14",
    "@types/react-dom": "18.3.3",
    "autoprefixer": "10.4.20",
    "drizzle-kit": "0.30.0",
    "lefthook": "1.9.0",
    "postcss": "8.4.49",
    "tailwindcss": "3.4.16",
    "typescript": "5.7.2",
    "vite": "6.0.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "2.0.5",
    "wrangler": "3.95.0"
  },
  "engines": {
    "node": "23.4.0"
  }
