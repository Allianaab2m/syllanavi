{
  "name": "syllanavi",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "deploy": "wrangler pages deploy ./build/client",
    "dev": "remix vite:dev",
    "check:format": "biome check --formatter-enabled=true --linter-enabled=false --organize-imports-enabled=true",
    "check:lint": "biome lint",
    "format": "biome check --formatter-enabled=true --linter-enabled=false --organize-imports-enabled=true --write",
    "lint": "biome lint --write",
    "start": "wrangler pages dev ./build/client",
    "typecheck": "tsc",
    "typegen": "wrangler types --experimental-include-runtime",
    "test": "vitest",
    "migrate:generate": "drizzle-kit generate",
    "migrate:apply:local": "wrangler d1 migrations apply syllanavi-v2-d1 --local",
    "migrate:apply": "wrangler d1 migrations apply syllanavi-v2-d1 --remote",
    "migrate:apply:dev": "wrangler d1 migrations apply syllanavi-v2-d1-dev --remote",
    "postinstall": "lefthook install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@hono/zod-validator": "0.4.3",
    "@paralleldrive/cuid2": "2.2.2",
    "@radix-ui/react-slot": "1.1.2",
    "@remix-run/cloudflare": "2.15.3",
    "@remix-run/cloudflare-pages": "2.15.3",
    "@remix-run/react": "2.15.3",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "drizzle-orm": "0.39.3",
    "hono": "4.7.2",
    "hono-remix-adapter": "0.5.4",
    "isbot": "5.1.23",
    "lucide-react": "0.475.0",
    "neverthrow": "8.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "3.0.2",
    "tailwindcss-animate": "1.0.7",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@chromatic-com/storybook": "3.2.4",
    "@cloudflare/vitest-pool-workers": "0.7.1",
    "@cloudflare/workers-types": "4.20250214.0",
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@hono/vite-dev-server": "0.18.1",
    "@remix-run/dev": "2.15.3",
